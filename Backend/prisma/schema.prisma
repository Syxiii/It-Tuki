generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  name         String
  passwordHash String
  role         Role     @default(USER)
  createdAt    DateTime @default(now())
  tickets      Ticket[]
}

model Ticket {
  id          Int          @id @default(autoincrement())
  title       String
  description String
  status      TicketStatus @default(AVOIN)
  priority    Priority     @default(KESKITASO)
  userId      Int
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  user        User         @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  USER
}

enum TicketStatus {
  AVOIN
  KASITTELYSSA
  RATKAISTU
}

enum Priority {
  MATALA
  KESKITASO
  KORKEA
}
